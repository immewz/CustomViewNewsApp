<?xml version="1.0" encoding="utf-8"?>
<com.mewz.customviewnewsapp.views.viewpods.EmptyViewPod xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivEmptyImage"
        android:layout_width="160dp"
        android:layout_centerInParent="true"
        android:layout_height="160dp"
        android:scaleType="centerCrop"
        android:src="@drawable/empty"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvEmpty"
        android:text="@string/em_no_news"
        android:layout_below="@id/ivEmptyImage"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnTryAgain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/try_again"
        android:layout_centerInParent="true"
        android:layout_below="@id/tvEmpty"
        android:layout_marginTop="@dimen/margin_medium"/>

</com.mewz.customviewnewsapp.views.viewpods.EmptyViewPod>