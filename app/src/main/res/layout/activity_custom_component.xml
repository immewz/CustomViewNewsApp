<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activities.CustomComponentActivity"
    android:background="@android:color/holo_purple">

    <com.mewz.customviewnewsapp.views.components.EmotionalFaceView
        android:id="@+id/emotionalFaceView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/margin_large"/>

    <com.mewz.customviewnewsapp.views.components.EmotionalFaceView
        android:id="@+id/happyButton"
        android:layout_width="@dimen/margin_xxxlarge"
        android:layout_height="@dimen/margin_xxxlarge"
        android:layout_alignParentStart="true"
        android:layout_margin="@dimen/margin_medium"
        app:faceColor="@android:color/holo_red_light"
        app:eyesColor="@android:color/white"
        app:mouthColor="@android:color/white"
        app:state="happy"/>

    <com.mewz.customviewnewsapp.views.components.EmotionalFaceView
        android:id="@+id/sadButton"
        android:layout_width="@dimen/margin_xxxlarge"
        android:layout_height="@dimen/margin_xxxlarge"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/margin_medium"
        app:faceColor="@android:color/darker_gray"
        app:eyesColor="@android:color/black"
        app:mouthColor="@android:color/black"
        app:state="sad"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnNavigate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/margin_medium"
        android:src="@drawable/ic_navigate_next_black_24dp" />

</RelativeLayout>